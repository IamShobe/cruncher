{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "paths": {
      "~lib/*": [
        "./src/lib/*"
      ],
    },
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/processes/frontend/**/*"
  ]
}