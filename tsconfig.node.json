{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "~lib/*": [
        "./src/lib/*"
      ],
      "~adapters/*": [
        "./src/adapters/*"
      ],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/renderer/**/*"]
}
