{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true
    }
}