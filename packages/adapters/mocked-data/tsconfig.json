{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}